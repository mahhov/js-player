{
  "name": "js-player",
  "version": "1.1.0",
  "description": "electron app to play local media",
  "main": "src/electronStarter.js",
  "scripts": {
    "start": "electron .",
    "build": "rm -rf dist; electron-builder ."
  },
  "author": "mahhov1",
  "license": "ISC",
  "devDependencies": {
    "electron": "^4.1.1",
    "electron-builder": "^20.39.0"
  },
  "dependencies": {
    "dwytpl": "^3.3.0",
    "env-paths": "^2.1.0",
    "font-awesome": "^4.7.0"
  },
  "build": {
    "asar": false,
    "artifactName": "${name}-${version}-${os}-${arch}.${ext}",
    "files": [
      "resources",
      "src"
    ],
    "icon": "./resources/headphones-alt-solid-512.png",
    "linux": {
      "target": "AppImage"
    }
  }
}
